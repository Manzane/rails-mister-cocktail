<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key %>')">
  <div class="container">
    <h1>Add a new Ingredient to <%= @cocktail.name %></h1>
  </div>
</div>
<div class="container bg-lig mt-4">
<%= simple_form_for([@cocktail, @dose]) do |f| %>
  <%#= f.error_notification %>
  <%#= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
 <div class="form-inputs">
    <%= f.association :ingredient, include_blank: false %>
    <%= f.input :description %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-ghost" %>
  </div>

<% end %>

<%= link_to cocktails_path do %>
  <i class="fas fa-backward">Back</i>
  <% end %>
</div>
