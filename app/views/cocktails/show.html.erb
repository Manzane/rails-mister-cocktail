<h1><%= @cocktail.name %></h1>

<p>Ingredients</p>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
    <%= dose.ingredient.name %>
    <%= dose.description %>
    <%= link_to 'Delete the dose', dose, method: :delete, data: { confirm: 'Are you sure?' } %>

</li>
<% end %>
</ul>
<%= link_to 'Add a new ingredient/dose', new_cocktail_dose_path(@cocktail) %>
<%= link_to 'Back', cocktails_path %>
