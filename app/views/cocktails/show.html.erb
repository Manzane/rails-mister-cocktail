<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key %>')">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>
<div class="container bg-lig mt-4">
  <h3>Ingredients</h3>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li>

      <%= dose.ingredient.name %>
      <%= dose.description %>
      <%= link_to dose, method: :delete,
                  data: { confirm: "Are you sure?" } do %>
                  <i class='far fa-trash-alt'>Delete</i>
                  <% end %></p>


  </li>
  <% end %>
  </ul>
  <p><%= link_to new_cocktail_dose_path(@cocktail) do %>
    <i class="fas fa-plus"> Add a new ingredient</i>
    <% end %></p>
  <p><%= link_to cocktails_path do %>
    <i class="fas fa-backward">Back</i>
    <% end %>
</p>
</div>
